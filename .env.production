# Production Environment Configuration
NODE_ENV=production
PORT=4000

# ===========================================
# LLM API Keys (REQUIRED)
# ===========================================

# OpenAI API (required for GPT-4o, Assistant APIs)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (required for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI API (required for Gemini models)
GOOGLE_API_KEY=your_google_api_key_here

# OpenRouter API (required for extended model support)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Alibaba Cloud API (optional - for Qwen models)
ALIBABA_ACCESS_KEY_ID=your_alibaba_key_id_here
ALIBABA_ACCESS_KEY_SECRET=your_alibaba_secret_here
ALIBABA_REGION=ap-northeast-1
QWEN_ENDPOINT=https://dashscope.aliyuncs.com/api/v1/services/aigc/text-generation/generation

# ===========================================
# External APIs (Optional)
# ===========================================

# Weather API
OPENWEATHER_API_KEY=your_openweather_api_key

# Financial Data API
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# News API
NEWS_API_KEY=your_news_api_key

# ===========================================
# Security Configuration
# ===========================================

# JWT Secret (generate strong random key)
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters

# ===========================================
# System Configuration
# ===========================================

# Monthly Budget (USD)
MONTHLY_BUDGET=70

# Cost Management
MAX_REQUEST_COST=5.0
WARNING_THRESHOLD=0.8
CRITICAL_THRESHOLD=0.95

# Performance
REQUEST_TIMEOUT=30000
MAX_RETRIES=3

# Logging
LOG_LEVEL=info

# ===========================================
# Database & Cache (Optional)
# ===========================================

# Redis (for session management and caching)
# REDIS_URL=redis://llm-redis:6379

# ===========================================
# Production Deployment
# ===========================================

# Health check settings
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090