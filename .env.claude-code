# Claude Code環境用の環境変数設定
# 本番Webアプリ用の.env.productionとは別の軽量版

NODE_ENV=development

# ===========================================
# 必須APIキー（Claude Code環境用）
# ===========================================

# OpenAI API (GPT-4o, Assistant APIs用)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (Claude Sonnet用)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI API (Gemini Flash, Gemini Pro用)
GOOGLE_API_KEY=your_google_api_key_here

# OpenRouter API (13+モデル対応)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ===========================================
# オプション: Alibaba Cloud (Qwen3 Coder用)
# ===========================================
# 注意: OpenRouterからもQwen3にアクセス可能なため、必須ではありません

# ALIBABA_ACCESS_KEY_ID=your_alibaba_key_id_here
# ALIBABA_ACCESS_KEY_SECRET=your_alibaba_secret_here
# ALIBABA_REGION=ap-northeast-1

# ===========================================
# Claude Code専用設定
# ===========================================

# 月間予算（デフォルト：$70、Claude Code用に$30に削減推奨）
MONTHLY_BUDGET=30

# コスト制限（1回のリクエストの最大コスト）
MAX_REQUEST_COST=2.0

# パフォーマンス
REQUEST_TIMEOUT=60000
MAX_RETRIES=2

# ログレベル（Claude Code用はdebug推奨）
LOG_LEVEL=debug

# プリセット設定（cost_optimized推奨）
MODEL_PRESET=cost_optimized

# ===========================================
# Claude Code開発用オプション
# ===========================================

# デバッグ出力の有効化
ENABLE_DEBUG_LOGS=true

# メトリクス表示の有効化
ENABLE_METRICS_OUTPUT=true

# 実行時のコスト警告レベル
COST_WARNING_THRESHOLD=0.50

# 使用統計の自動リセット（開発時のみtrue推奨）
AUTO_RESET_METRICS=false